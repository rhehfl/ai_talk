{
  "name": "dev-ai-talk",
  "private": true,
  "packageManager": "yarn@4.9.4",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@next/eslint-plugin-next": "^15.0.0-rc.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/copyfiles": "^2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.5.0",
    "eslint-config-next": "15.0.0-rc.0",
    "eslint-plugin-react": "^7.34.2",
    "globals": "^15.4.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.2",
    "typescript-eslint": "^7.13.0"
  },
  "scripts": {
    "dev": "yarn dev:back && yarn dev:front",
    "dev:back": "yarn workspace back start:dev",
    "dev:front": "yarn workspace front dev --experimental-https --experimental-https-key ./localhost-key.pem --experimental-https-cert ./localhost.pem",
    "typecheck": "tsc -b",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "dependenciesMeta": {
    "eslint-plugin-prettier@5.5.4": {
      "unplugged": true
    }
  }
}
