{
  "search.exclude": {
    "**/.pnp.*": true,
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.yarn/**": true,
    "**/dist/**": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.nodePath": ".yarn/sdks",
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsserver.maxTsServerMemory": 8192,

  "eslint.enable": false,
    "editor.formatOnSave": true, 
  
  // ESLint 확장 기능에서 지원하는 파일 타입에 대해서만 Prettier를 비활성화
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "eslint.workingDirectories": [
    { "directory": "packages/front", "changeProcessCWD": true },
    { "directory": "packages/back", "changeProcessCWD": true }
  ],
  
  // 대신 ESLint의 자동 수정에 Prettier 규칙을 적용하는 방식(eslint-plugin-prettier)을 이미 사용하고 있다면 아래 설정만으로 충분합니다.
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit" 
  },
  
}
