// front/.vscode/settings.json

{
  // 1. Prettier 경로 설정 (front 폴더 내부의 .yarn/sdks를 기준으로 찾음)
  "prettier.prettierPath": "../.yarn/sdks/prettier/index.cjs",

  // 2. TypeScript SDK 경로 설정 (front 폴더 내부의 .yarn/sdks를 기준으로 찾음)
  "typescript.tsdk": "../.yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // 3. ESLint 및 저장 시 자동 포맷 설정
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],

  // 4. 검색/분석 제외 (front 폴더 내에서만 동작)
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "../back": true, // back 폴더를 검색 대상에서 명시적으로 제외
    "../common": true, // 공유 패키지 폴더가 있다면 제외
  },
}
