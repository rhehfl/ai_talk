{
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist", // 빌드 결과는 dist 폴더에
    "rootDir": "./src", // 소스 코드는 src 폴더
    "declaration": true // 타입 정의 파일(.d.ts) 생성
  },
  "include": ["src/**/*"], // 컴파일 대상
  "exclude": ["node_modules", "dist"] // 컴파일 제외
}
