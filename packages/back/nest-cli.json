{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "tsc",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./configs/env/*.env",
        "outDir": "./dist"
      }
    ]
  },
  "plugins": [
    {
      "name": "@nestjs/swagger",
      "options": {
        "classValidatorShim": true,
        "introspectComments": true
      }
    },
    {
      "name": "nestjs-swc-paths",
      "options": {
        "tsConfigPath": "tsconfig.json"
      }
    }
  ]
}
